<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6 text-gray-800 text-center">マイページ</h1>
  
  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4 text-gray-700 text-center">ユーザー情報</h2>
    <p class="mb-2 text-center"><span class="font-medium">ユーザー名:</span> <%= @user.username %></p>
    <p class="mb-2 text-center"><span class="font-medium">メールアドレス:</span> <%= @user.email %></p>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4 text-gray-700 text-center">クロノタイプ情報</h2>
    <% if @latest_chronotype %>
      <p class="mb-2 text-center"><span class="font-medium">現在のクロノタイプ:</span> <%= @latest_chronotype.chronotype.name %></p>
      <div class="flex justify-center mt-4">
        <% path_map = {
        "クマ型" => chronotype_details_bear_path,
        "ライオン型" => chronotype_details_lion_path,
        "オオカミ型" => chronotype_details_wolf_path,
        "イルカ型" => chronotype_details_dolphin_path
        } %>
        <%= link_to "#{@latest_chronotype.chronotype.name}の詳細を見る", path_map[@latest_chronotype.chronotype.name], class: "inline-block bg-gray-200 text-gray-800 py-2 px-4 rounded hover:bg-gray-300 transition duration-300 border border-gray-400 shadow-sm" %>
      </div>
    <% else %>
      <p class="text-gray-600 text-center">クロノタイプ情報はまだありません。</p>
    <% end %>
  </div>
</div>
