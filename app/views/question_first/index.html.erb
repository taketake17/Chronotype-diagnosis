<%= form_with model:@user_answer,url: question_first_index_path, local: true, method: :post do |f| %>
  <div>
    <% @questions.each do |question| %>
      <div>
        <h3><%= question.question_text %></h3>
        <div>
         <%= f.radio_button "answers[#{question.id}]", 1 %>
         <%= f.label "answers_#{question.id}_1", question.option1 %>
         <%= f.radio_button "answers[#{question.id}]", 0 %>
         <%= f.label "answers_#{question.id}_0", question.option2 %>
      </div>
    <% end %>
  </div>
  <%= f.submit "結果を見る！" %>
<% end %>
